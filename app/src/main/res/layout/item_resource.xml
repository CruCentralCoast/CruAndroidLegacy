<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resource_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">

    <View android:layout_width="match_parent"
          android:id="@+id/resource_divider"
          android:layout_height="2dp"
          android:background="@color/grey300"
          android:minHeight="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:id="@+id/resource_icon"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_toRightOf="@id/resource_icon"
            android:layout_alignParentLeft="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                tools:text="Prayer 101"
                android:textColor="@color/cruGray"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tags"
                tools:text="hip, cool, prayer, intro"
                android:textColor="@color/cruOrange"
                android:textSize="16sp"
                android:paddingBottom="4dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>